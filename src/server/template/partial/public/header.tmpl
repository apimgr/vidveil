{{define "public/header"}}
{{/* Header: logo/branding + user actions (preferences, hamburger) per AI.md PART 16 */}}
<header class="site-header">
    <a href="/" class="site-brand">Vidveil</a>
    <div class="header-actions">
        {{/* User preferences icon */}}
        <a href="/preferences" class="header-action" title="Preferences" aria-label="Preferences">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <circle cx="12" cy="12" r="3"></circle>
                <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
            </svg>
        </a>
        {{/* Hamburger menu toggle - right of preferences */}}
        <button class="header-action nav-toggle" aria-label="Open menu" aria-expanded="false" aria-controls="nav-panel" onclick="toggleNav()">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <line x1="3" y1="12" x2="21" y2="12"></line>
                <line x1="3" y1="6" x2="21" y2="6"></line>
                <line x1="3" y1="18" x2="21" y2="18"></line>
            </svg>
        </button>
    </div>
</header>

{{/* Mobile slide-in panel - slides from RIGHT per AI.md PART 16 */}}
<div class="nav-panel" id="nav-panel" aria-hidden="true">
    <div class="nav-panel-header">
        <span>Menu</span>
        <button class="nav-panel-close" onclick="closeNav()" aria-label="Close menu">&times;</button>
    </div>
    <a href="/" class="nav-panel-link{{if eq .ActiveNav "home"}} active{{end}}">Home</a>
    <a href="/search" class="nav-panel-link{{if eq .ActiveNav "search"}} active{{end}}">Search</a>
    <a href="/server/about" class="nav-panel-link{{if eq .ActiveNav "about"}} active{{end}}">About</a>
    <a href="/server/privacy" class="nav-panel-link{{if eq .ActiveNav "privacy"}} active{{end}}">Privacy</a>
    <a href="/server/help" class="nav-panel-link{{if eq .ActiveNav "help"}} active{{end}}">Help</a>
    <hr class="nav-panel-divider">
    <a href="/preferences" class="nav-panel-link{{if eq .ActiveNav "preferences"}} active{{end}}">Preferences</a>
</div>
<div class="nav-overlay" id="nav-overlay" onclick="closeNav()"></div>
{{end}}
