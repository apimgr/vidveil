{{define "header"}}
<header>
    <a href="/" class="logo">Vidveil</a>
    <form class="search-form" action="/search" method="GET" onsubmit="this.querySelector('button').disabled=true;this.querySelector('button').textContent='Searching...'">
        <input type="text" name="q" value="{{.Query}}" placeholder="Search videos..." autocomplete="off" required>
        <button type="submit">Search</button>
    </form>
    <div class="header-actions">
        <a href="/preferences" title="Preferences">Settings</a>
    </div>
</header>
{{end}}
