{{define "content"}}
<div class="card">
    <h2>Tor Status</h2>
    <table class="info-table">
        <tr><td>Tor Enabled</td><td>{{if .TorEnabled}}<span class="badge badge-success">Active</span>{{else}}<span class="badge badge-warning">Disabled</span>{{end}}</td></tr>
        <tr><td>Connection</td><td>{{if .TorConnected}}<span class="badge badge-success">Connected</span>{{else}}<span class="badge badge-error">Disconnected</span>{{end}}</td></tr>
        {{if .TorEnabled}}
        <tr><td>SOCKS Proxy</td><td>{{.TorProxy}}</td></tr>
        <tr><td>Control Port</td><td>{{.TorControlPort}}</td></tr>
        <tr><td>Current Circuit</td><td>{{.TorCircuit}}</td></tr>
        {{end}}
    </table>
</div>

<div class="card">
    <h2>Tor Configuration</h2>
    <form id="tor-form" onsubmit="saveTorSettings(event)">
        <div class="form-group">
            <label class="toggle-label">
                <input type="checkbox" id="tor-enabled"{{if .Config.Search.Tor.Enabled}} checked{{end}}>
                <span>Enable Tor</span>
            </label>
        </div>
        <div class="form-group">
            <label for="tor-proxy">SOCKS Proxy Address</label>
            <input type="text" id="tor-proxy" value="{{.Config.Search.Tor.Proxy}}" placeholder="127.0.0.1:9050">
            <p class="help-text">Tor SOCKS5 proxy address</p>
        </div>
        <div class="form-group">
            <label for="tor-control">Control Port</label>
            <input type="text" id="tor-control" value="{{.Config.Search.Tor.ControlPort}}" placeholder="127.0.0.1:9051">
            <p class="help-text">Tor control port for circuit management</p>
        </div>
        <div class="form-group">
            <label class="toggle-label">
                <input type="checkbox" id="tor-force-all"{{if .Config.Search.Tor.ForceAll}} checked{{end}}>
                <span>Force All Traffic Through Tor</span>
            </label>
            <p class="help-text">Route all search requests through Tor</p>
        </div>
        <div class="form-group">
            <label class="toggle-label">
                <input type="checkbox" id="tor-rotate"{{if .Config.Search.Tor.RotateCircuit}} checked{{end}}>
                <span>Auto-Rotate Circuit</span>
            </label>
            <p class="help-text">Automatically rotate Tor circuit on each request</p>
        </div>
        <div class="form-group">
            <label class="toggle-label">
                <input type="checkbox" id="tor-clearnet-fallback"{{if .Config.Search.Tor.ClearnetFallback}} checked{{end}}>
                <span>Clearnet Fallback</span>
            </label>
            <p class="help-text">Fall back to clearnet if Tor fails</p>
        </div>
        <div class="button-group">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <button type="button" onclick="testTor()" class="btn btn-secondary">Test Connection</button>
            <button type="button" onclick="rotateTorCircuit()" class="btn btn-secondary">Rotate Circuit</button>
        </div>
    </form>
</div>

<div class="card">
    <h2>Onion Service</h2>
    <table class="info-table">
        <tr><td>Status</td><td>{{if .OnionEnabled}}<span class="badge badge-success">Active</span>{{else}}<span class="badge badge-warning">Disabled</span>{{end}}</td></tr>
        {{if .OnionEnabled}}
        <tr><td>Address</td><td><code>{{.OnionAddress}}</code></td></tr>
        {{end}}
    </table>
    <form id="onion-form" onsubmit="saveOnionSettings(event)">
        <div class="form-group">
            <label class="toggle-label">
                <input type="checkbox" id="onion-enabled"{{if .Config.Server.Tor.Onion.Enabled}} checked{{end}}>
                <span>Enable Onion Service</span>
            </label>
        </div>
        <div class="button-group">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            {{if .OnionEnabled}}
            <button type="button" onclick="regenerateOnion()" class="btn btn-warning">Regenerate Address</button>
            {{end}}
        </div>
    </form>
</div>

<div class="card">
    <h2>Vanity Address Generator</h2>
    <p class="text-muted">Generate a custom .onion address with a specific prefix.</p>
    <form id="vanity-form" onsubmit="generateVanity(event)">
        <div class="form-group">
            <label for="vanity-prefix">Desired Prefix</label>
            <input type="text" id="vanity-prefix" placeholder="vidveil" maxlength="8" pattern="[a-z2-7]+">
            <p class="help-text">Use only lowercase a-z and digits 2-7. Longer prefixes take exponentially longer.</p>
        </div>
        <div class="button-group">
            <button type="submit" class="btn btn-primary">Start Generation</button>
        </div>
    </form>
    {{if .VanityJobs}}
    <h3>Generation Jobs</h3>
    <table class="data-table">
        <thead>
            <tr><th>Prefix</th><th>Progress</th><th>Status</th><th>Actions</th></tr>
        </thead>
        <tbody>
            {{range .VanityJobs}}
            <tr>
                <td><code>{{.Prefix}}</code></td>
                <td>{{.Attempts}} attempts</td>
                <td>
                    {{if eq .Status "running"}}<span class="badge badge-info">Running</span>
                    {{else if eq .Status "complete"}}<span class="badge badge-success">Complete</span>
                    {{else}}<span class="badge badge-warning">{{.Status}}</span>{{end}}
                </td>
                <td>
                    {{if eq .Status "complete"}}
                    <button class="btn btn-sm btn-primary" onclick="applyVanity('{{.ID}}')">Apply</button>
                    {{end}}
                    <button class="btn btn-sm btn-error" onclick="cancelVanity('{{.ID}}')">Cancel</button>
                </td>
            </tr>
            {{end}}
        </tbody>
    </table>
    {{end}}
</div>

<div class="card">
    <h2>Import Existing Key</h2>
    <p class="text-muted">Import an existing onion service private key.</p>
    <form id="import-form" onsubmit="importOnionKey(event)">
        <div class="form-group">
            <label for="onion-key">Private Key (base64)</label>
            <textarea id="onion-key" rows="3" placeholder="ED25519-V3 private key in base64 format"></textarea>
        </div>
        <div class="button-group">
            <button type="submit" class="btn btn-secondary">Import Key</button>
        </div>
    </form>
</div>
{{end}}

{{define "scripts"}}
<script>
async function saveTorSettings(e) {
    e.preventDefault();
    try {
        const resp = await fetch('/api/v1/admin/server/tor', {
            method: 'PATCH',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                enabled: document.getElementById('tor-enabled').checked,
                proxy: document.getElementById('tor-proxy').value,
                control_port: document.getElementById('tor-control').value,
                force_all: document.getElementById('tor-force-all').checked,
                rotate_circuit: document.getElementById('tor-rotate').checked,
                clearnet_fallback: document.getElementById('tor-clearnet-fallback').checked
            })
        });
        const data = await resp.json();
        if (data.success) { showSuccess('Tor settings saved!'); }
        else { showError('Error: ' + data.error); }
    } catch (e) { showError('Error: ' + e.message); }
}

async function testTor() {
    try {
        const resp = await fetch('/api/v1/admin/server/tor/test', { method: 'POST' });
        const data = await resp.json();
        if (data.success) { showSuccess('Tor connection successful! IP: ' + data.data.ip); }
        else { showError('Error: ' + data.error); }
    } catch (e) { showError('Error: ' + e.message); }
}

async function rotateTorCircuit() {
    try {
        const resp = await fetch('/api/v1/admin/server/tor/regenerate', { method: 'POST' });
        const data = await resp.json();
        if (data.success) { showSuccess('Circuit rotated successfully!'); location.reload(); }
        else { showError('Error: ' + data.error); }
    } catch (e) { showError('Error: ' + e.message); }
}

async function saveOnionSettings(e) {
    e.preventDefault();
    try {
        const resp = await fetch('/api/v1/admin/config', {
            method: 'PATCH',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                server: {
                    tor: {
                        onion: { enabled: document.getElementById('onion-enabled').checked }
                    }
                }
            })
        });
        const data = await resp.json();
        if (data.success) { showSuccess('Onion service settings saved!'); }
        else { showError('Error: ' + data.error); }
    } catch (e) { showError('Error: ' + e.message); }
}

async function regenerateOnion() {
    if (!confirm('Are you sure? This will generate a new .onion address and invalidate the current one.')) return;
    try {
        const resp = await fetch('/api/v1/admin/server/tor/regenerate', { method: 'POST' });
        const data = await resp.json();
        if (data.success) { showSuccess('New onion address generated!'); location.reload(); }
        else { showError('Error: ' + data.error); }
    } catch (e) { showError('Error: ' + e.message); }
}

async function generateVanity(e) {
    e.preventDefault();
    const prefix = document.getElementById('vanity-prefix').value;
    if (!prefix) { showError('Please enter a prefix'); return; }
    try {
        const resp = await fetch('/api/v1/admin/server/tor/vanity', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ prefix: prefix })
        });
        const data = await resp.json();
        if (data.success) { showSuccess('Vanity generation started!'); location.reload(); }
        else { showError('Error: ' + data.error); }
    } catch (e) { showError('Error: ' + e.message); }
}

async function applyVanity(id) {
    try {
        const resp = await fetch('/api/v1/admin/server/tor/vanity/apply', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ id: id })
        });
        const data = await resp.json();
        if (data.success) { showSuccess('Vanity address applied!'); location.reload(); }
        else { showError('Error: ' + data.error); }
    } catch (e) { showError('Error: ' + e.message); }
}

async function cancelVanity(id) {
    try {
        const resp = await fetch('/api/v1/admin/server/tor/vanity/' + id, { method: 'DELETE' });
        const data = await resp.json();
        if (data.success) { showSuccess('Job cancelled!'); location.reload(); }
        else { showError('Error: ' + data.error); }
    } catch (e) { showError('Error: ' + e.message); }
}

async function importOnionKey(e) {
    e.preventDefault();
    const key = document.getElementById('onion-key').value;
    if (!key) { showError('Please enter a private key'); return; }
    try {
        const resp = await fetch('/api/v1/admin/server/tor/import', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ private_key: key })
        });
        const data = await resp.json();
        if (data.success) { showSuccess('Key imported successfully!'); location.reload(); }
        else { showError('Error: ' + data.error); }
    } catch (e) { showError('Error: ' + e.message); }
}
</script>
{{end}}
