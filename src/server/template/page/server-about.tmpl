{{define "server-about"}}
{{template "public" .}}
{{end}}

{{define "content"}}
<div class="content">
    <div class="prose">
        <h1>About {{.AppName}}</h1>
        <p>{{.AppDescription}}</p>

        <h2>Features</h2>
        <ul>
            <li>Privacy-focused video meta-search</li>
            <li>No tracking or personal data collection</li>
            <li>Aggregates results from 50+ video sources</li>
            <li>Bang shortcuts for targeted searches</li>
            <li>SSE streaming for real-time results</li>
            <li>Thumbnail proxy prevents tracking</li>
            <li>Open source and self-hostable</li>
        </ul>

        <h2>Version Information</h2>
        <p><strong>Version:</strong> <code>{{.Version}}</code></p>
        <p><strong>Build:</strong> {{.BuildDateTime}}</p>

        <h2>Source Code</h2>
        <p>VidVeil is open source software. View the source code and contribute on <a href="https://github.com/apimgr/vidveil" target="_blank" rel="noopener">GitHub</a>.</p>
    </div>
</div>
{{end}}
