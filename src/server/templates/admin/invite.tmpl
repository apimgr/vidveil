{{define "invite"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accept Admin Invite - {{.SiteTitle}}</title>
    <link rel="stylesheet" href="/static/css/style.css">
    <style>
        .invite-container { max-width: 400px; margin: 100px auto; padding: 20px; }
        .invite-box { background: #1a1a2e; border-radius: 8px; padding: 30px; }
        .invite-title { text-align: center; margin-bottom: 20px; }
        .error { color: #e74c3c; margin-bottom: 15px; text-align: center; }
        .success { color: #10b981; margin-bottom: 15px; text-align: center; }
        .form-group { margin-bottom: 15px; }
        .form-group label { display: block; margin-bottom: 5px; }
        .form-group input { width: 100%; padding: 10px; border-radius: 4px; border: 1px solid #333; background: #0f0f1a; color: #fff; }
        .form-group input:disabled { background: #333; }
        .btn-primary { width: 100%; padding: 12px; background: #6c5ce7; color: #fff; border: none; border-radius: 4px; cursor: pointer; }
        .btn-primary:hover { background: #5b4bc7; }
        .help-text { font-size: 0.85em; color: #888; margin-top: 5px; }
    </style>
</head>
<body>
    <div class="invite-container">
        <div class="invite-box">
            <h1 class="invite-title">Admin Account Setup</h1>
            {{if .Error}}
            <div class="error">{{.Error}}</div>
            {{end}}
            {{if .Success}}
            <div class="success">{{.Success}}</div>
            <p class="text-center mt-lg">
                <a href="/auth/login" class="btn-primary d-inline-block text-decoration-none">Go to Login</a>
            </p>
            {{else if .Valid}}
            <p class="text-center mb-lg">Set a password for your admin account.</p>
            <form method="POST">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" value="{{.Username}}" disabled>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required placeholder="Enter password" minlength="8">
                    <span class="help-text">Minimum 8 characters</span>
                </div>
                <div class="form-group">
                    <label for="confirm">Confirm Password</label>
                    <input type="password" id="confirm" name="confirm" required placeholder="Confirm password">
                </div>
                <input type="hidden" name="token" value="{{.Token}}">
                <button type="submit" class="btn-primary">Create Account</button>
            </form>
            {{else}}
            <p class="text-center">This invite link is invalid or has expired.</p>
            <p class="text-center mt-lg">
                <a href="/" class="text-accent">Return to Home</a>
            </p>
            {{end}}
        </div>
    </div>
</body>
</html>
{{end}}
