{{define "content-blocked"}}
<!DOCTYPE html>
<html lang="en" class="theme-{{.Theme}}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="referrer" content="no-referrer">
    <title>{{.Title}}</title>
    <link rel="stylesheet" href="/static/css/common.css">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>&#128683;</text></svg>">
</head>
<body>
    <div class="age-gate">
        <div class="age-gate-box blocked">
            <div class="warning-icon">&#128683;</div>
            <h1>Access Restricted</h1>
            {{if .Region}}
            <p class="region-notice">Detected location: <strong>{{.Region}}</strong></p>
            {{end}}
            <p>{{.Message}}</p>
            <p>Access to this service is not available from your current location due to regional restrictions or legal requirements.</p>
            <div class="age-buttons">
                <button class="btn-no" onclick="window.location.href='https://www.google.com'">Leave Site</button>
            </div>
            <p class="legal">
                If you believe this is an error, you may be using a VPN or proxy that shows an incorrect location.
                This service respects regional content restrictions.
            </p>
        </div>
    </div>
</body>
</html>
{{end}}
