{{define "server-contact"}}
{{template "public" .}}
{{end}}

{{define "content"}}
<div class="content-area">
    <header class="page-header">
        <h1>Contact Us</h1>
    </header>

    {{if .Message}}
    <div class="alert alert-{{.MessageType}}">{{.Message}}</div>
    {{end}}

    <section class="card">
        <h2>Get in Touch</h2>
        <p>Have questions, feedback, or found a bug? We'd love to hear from you.</p>
    </section>

    <section class="card">
        <h2>GitHub</h2>
        <p>The best way to report bugs or request features is through our GitHub repository:</p>
        <p><a href="https://github.com/apimgr/vidveil/issues" target="_blank" rel="noopener" class="btn btn-primary">Open an Issue</a></p>
    </section>

    {{if .ContactEnabled}}
    <section class="card">
        <h2>Contact Form</h2>
        <form method="POST" action="/server/contact" class="contact-form">
            <div class="form-group">
                <label for="email">Your Email (optional)</label>
                <input type="email" id="email" name="email" placeholder="your@email.com">
            </div>
            <div class="form-group">
                <label for="subject">Subject</label>
                <input type="text" id="subject" name="subject" required placeholder="What is this about?">
            </div>
            <div class="form-group">
                <label for="message">Message</label>
                <textarea id="message" name="message" required rows="5" placeholder="Your message..."></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
    </section>
    {{end}}
</div>
{{end}}
