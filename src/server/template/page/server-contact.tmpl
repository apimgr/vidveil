{{define "server-contact"}}
{{template "public" .}}
{{end}}

{{define "content"}}
<div class="content">
    <div class="prose">
        <h1>Contact Us</h1>

        {{if .Message}}
        <div class="alert alert-{{.MessageType}}">{{.Message}}</div>
        {{end}}

        <h2>Get in Touch</h2>
        <p>Have questions, feedback, or found a bug? We'd love to hear from you.</p>

        <h2>GitHub</h2>
        <p>The best way to report bugs or request features is through our GitHub repository:</p>
        <p><a href="https://github.com/apimgr/vidveil/issues" target="_blank" rel="noopener">Open an Issue on GitHub</a></p>

        {{if .ContactEnabled}}
        <h2>Contact Form</h2>
        <form method="POST" action="/server/contact" class="preferences-form">
            <div class="form-group">
                <label class="form-label" for="email">Your Email (optional)</label>
                <input class="form-input" type="email" id="email" name="email" placeholder="your@email.com">
            </div>
            <div class="form-group">
                <label class="form-label" for="subject">Subject</label>
                <input class="form-input" type="text" id="subject" name="subject" required placeholder="What is this about?">
            </div>
            <div class="form-group">
                <label class="form-label" for="message">Message</label>
                <textarea class="form-input" id="message" name="message" required rows="5" placeholder="Your message..."></textarea>
            </div>
            <button type="submit" class="search-button">Send Message</button>
        </form>
        {{end}}
    </div>
</div>
{{end}}
