{{define "home"}}
<!DOCTYPE html>
<html lang="en" data-theme="{{.Theme}}">
<head>
    {{template "head" .}}
</head>
<body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <main class="home" id="main-content" role="main">
        <h1>Vidveil</h1>
        <p>{{.Description}}</p>
        <form action="/search" method="get" class="search-form" role="search" aria-label="Video search" onsubmit="return handleSearchSubmit(this)">
            <label for="search-input" class="visually-hidden">Search query</label>
            <div class="search-wrapper">
                <input type="text" id="search-input" name="q" placeholder="Search videos... (try !ph or !rt)" autofocus required aria-required="true" aria-label="Enter search terms" autocomplete="off">
                <div id="autocomplete-dropdown" class="autocomplete-dropdown" role="listbox" aria-label="Bang suggestions"></div>
            </div>
            <button type="submit" aria-label="Submit search">Search</button>
        </form>
        <p class="bang-hint">Use bangs to search specific sites: <code>!ph</code> PornHub, <code>!rt</code> RedTube, <code>!xv</code> XVideos, <code>!xh</code> xHamster</p>
        <div id="search-history" class="search-history" role="region" aria-label="Recent searches"></div>
        <script src="/static/js/home.js"></script>
        <div class="engine-stats" role="contentinfo" aria-label="Service statistics">
            <span class="stat"><strong>{{.EngineCount}}</strong> engines</span>
            <span class="divider" aria-hidden="true">|</span>
            <span class="stat">No tracking</span>
            <span class="divider" aria-hidden="true">|</span>
            <span class="stat">Tor support</span>
        </div>
    </main>
    {{template "footer" .}}
</body>
</html>
{{end}}
