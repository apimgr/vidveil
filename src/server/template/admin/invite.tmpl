{{define "invite"}}
<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accept Admin Invite - {{.SiteTitle}}</title>
    <link rel="stylesheet" href="/static/css/common.css">
    {{/* Styles moved to common.css per AI.md PART 16 */}}
</head>
<body>
    <div class="invite-container">
        <div class="invite-box">
            <h1 class="invite-title">Admin Account Setup</h1>
            {{if .Error}}
            <div class="error">{{.Error}}</div>
            {{end}}
            {{if .Success}}
            <div class="success">{{.Success}}</div>
            <p class="text-center mt-lg">
                <a href="/auth/login" class="btn-primary d-inline-block text-decoration-none">Go to Login</a>
            </p>
            {{else if .Valid}}
            <p class="text-center mb-lg">Set a password for your admin account.</p>
            <form method="POST">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" value="{{.Username}}" disabled>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required placeholder="Enter password" minlength="8">
                    <span class="help-text">Minimum 8 characters</span>
                </div>
                <div class="form-group">
                    <label for="confirm">Confirm Password</label>
                    <input type="password" id="confirm" name="confirm" required placeholder="Confirm password">
                </div>
                <input type="hidden" name="token" value="{{.Token}}">
                <button type="submit" class="btn-primary">Create Account</button>
            </form>
            {{else}}
            <p class="text-center">This invite link is invalid or has expired.</p>
            <p class="text-center mt-lg">
                <a href="/" class="text-accent">Return to Home</a>
            </p>
            {{end}}
        </div>
    </div>
</body>
</html>
{{end}}
